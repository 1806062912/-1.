N = int(input("Введіть ціле число N (1 < N < 9): "))

if N <= 1 or N >= 9:
    print("Помилка: N має бути в межах 1 < N < 9.")
else:
    for i in range(1, N + 1):
        # пробіли зліва для центрованої форми
        print(" " * (N - i), end="")

        # зростаюча частина 1..i-1
        for k in range(1, i):
            print(k, end="")

        # пікове число i і спадна частина i-1..1
        for k in range(i, 0, -1):
            print(k, end="")

        print()  # перехід на новий рядок
